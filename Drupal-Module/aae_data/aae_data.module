/**
 * Implements hook_menu().
 */
function aae_data_menu() {
	
	//Menuitem "Akteure"
	$items['Akteure'] = array(
	        'title' => 'Akteure',
	        'page callback' => 'akteure_page',
			'access arguments' => array('access content'),
			'type' => MENU_NORMAL_ITEM,
	        'access callback' => TRUE,
	);
    
    //adding a menu item called "aae_data" (nur für Testzwecke!)
    $items['aae_data'] = array(
            'title' => 'aae_data',
            'page callback' => 'aae_data_page',
			'access arguments' => array('access content'),
			'type' => MENU_NORMAL_ITEM,
            'access callback' => TRUE,
    );
    //adding a menu item called "Akteurliste"
    $items['Akteurliste'] = array(
            'title' => 'Akteurliste',
            'page callback' => 'displayAkteure_page',
			'access arguments' => array('access content'),
			'type' => MENU_NORMAL_ITEM,
            'access callback' => TRUE,
    );
	

  return $items;
}

